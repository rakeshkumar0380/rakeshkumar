#include <stdio.h>

void DecimalToBinary(int);
void DecimalToOctal(int);
void DecimalToHexadecimal(int);

int main() {
    int choice;
    int input;
    
    printf("Press 1 to Convert Decimal to Binary:\n");
    printf("Press 2 to Convert Decimal to Octal:\n");
    printf("Press 3 to Convert Decimal to Hexadecimal:\n\n");
    
    printf("Enter the Choice from (1-3): ");
    scanf("%d", &choice);
    
    printf("Enter the Number: ");
    scanf("%d", &input);
    
    if (choice == 1) {
        printf("Binary: ");
        DecimalToBinary(input);
    } else if (choice == 2) {
        printf("Octal: ");
        DecimalToOctal(input);
    } else if (choice == 3) {
        printf("Hexadecimal: ");
        DecimalToHexadecimal(input);
    } else {
        printf("Invalid Input\n");
    }

    return 0;
}

void DecimalToBinary(int value) {
    int num = value;
    int arr[50];
    int len = 0;

    if (num == 0) {
        printf("0\n");
        return;
    }

    while (num > 0) {
        arr[len] = num % 2;
        num = num / 2;  
        len++;
    }
    
    for (int i = len - 1; i >= 0; i--) {
        printf("%d", arr[i]);
    }
    printf("\n");
}

void DecimalToOctal(int value) {
    int num = value;
    int arr[50];
    int len = 0;

    if (num == 0) {
        printf("0\n");
        return;
    }

    while (num > 0) {
        arr[len] = num % 8;
        num = num / 8;  
        len++;
    }
    
    for (int i = len - 1; i >= 0; i--) {
        printf("%d", arr[i]);
    }
    printf("\n");
}

void DecimalToHexadecimal(int value) {
    int num = value;
    char arr[50];
    int len = 0;

    if (num == 0) {
        printf("0\n");
        return;
    }

    while (num > 0) {
        int remainder = num % 16;
        if (remainder < 10) {
            arr[len] = remainder + '0';
        } else {
            arr[len] = remainder - 10 + 'A'; // Convert to A-F
        }
        len++;
        num = num / 16;
    }
    
    for (int i = len - 1; i >= 0; i--) {
        printf("%c", arr[i]);
    }
    printf("\n");
}
